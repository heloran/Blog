<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('../partials/head') %>
    <title>Edit Article</title>
</head>
<body>
    <div class="container">
        <h1>Edit Article</h1>
        <form action="/articles/<%= article._id %>?_method=PUT" method="POST">
            <div class="form-group">
                <label for="title">Title</label>
                <input type="text" name="title" id="title" value="<%= article.title %>" required>
            </div>
            <div class="form-group">
                <label for="description">Description</label>
                <textarea name="description" id="description"><%= article.description %></textarea>
            </div>
            <div class="form-group">
                <label for="markdown">Markdown</label>
                <textarea name="markdown" id="markdown" required><%= article.markdown %></textarea>
            </div>
            <button type="submit" class="btn btn-primary">Update Article</button>
        </form>
    </div>
</body>
</html>
