<form class="form-vertical" action="/articles" method="post">
    <label for="title" class="form-title">Title</label>
    <input type="text" id="title" name="title" class="form-input" required value="<%= article.title %>">
    <label for="description" class="form-title">Description</label>
    <textarea id="description" name="description" class="form-input"><%= article.description %></textarea>
    <label for="markdown" class="form-title">Markdown</label>
    <textarea id="markdown" name="markdown" class="form-input" required><%= article.markdown %></textarea>
    <div class="form-buttons">
<a href="/"><button type="reset" id="cancel" class="btn btn-cancel">Cancel</button></a>
<button type="submit" id="save" class="btn btn-save">Save</button>
</form>
</div>